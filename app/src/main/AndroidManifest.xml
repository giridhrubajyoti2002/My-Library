<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhrubajyoti.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/book"
        android:label="@string/app_name"
        android:roundIcon="@drawable/book"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLibrary">
        <activity
            android:name=".WebsiteActivity"
            android:exported="false" />
        <activity
            android:name=".FavouritesActivity"
            android:label="@string/activity_favourite_books"
            android:exported="false" />
        <activity
            android:name=".CurrentlyReadingActivity"
            android:label="@string/activity_currently_reading"
            android:exported="false" />
        <activity
            android:name=".WishlistActivity"
            android:label="@string/activity_wishlist"
            android:exported="false" />
        <activity
            android:name=".AlreadyReadBooksActivity"
            android:label="@string/activity_already_read"
            android:exported="false" />
        <activity
            android:name=".BookActivity"
            android:label="@string/activity_book"
            android:exported="false" />
        <activity
            android:name=".AllBooksActivity"
            android:label="@string/activity_all_books"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>